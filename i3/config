# Gaps not available in i3 4.16.1
# gaps inner 500px
# gaps outer 50px


## STARTUP APP
exec --no-startup-id i3-msg 'workspace 1; exec firefox'
exec --no-startup-id i3-msg 'workspace 2; exec alacritty'

# assign [class="Firefox"]   number 1
# assign [class="Alacritty"] number 2


## CUSTOM KEYBINDINGS
bindsym $mod+b       exec --no-startup-id firefox
bindsym $mod+o       exec --no-startup-id obsidian
bindsym $mod+Return  exec --no-startup-id alacritty
bindsym $mod+F4      exec "shutdown 1 && i3-nagbar -m 'The shutdown sequence has started. The computer will shutdown in a minute. REMEMBER TO PUSH ALL UNCOMMITTED CHANGES!' -B 'Shut now' 'shutdown now' -B 'Reboot' 'shutdown -r now' -B 'Cancel' 'shutdown -c'"

bindsym $mod+Shift+l  exec --no-startup-id "dm-tool lock"
bindsym $mod+Shift+s  exec coreshot -f "/home/$USER/Pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H:%M:%S').jpeg"
bindsym $mod+Ctrl+s   exec coreshot -s "/home/$USER/Pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H:%M:%S').jpeg"


## "Borrowed" KEYBINDINGS
# Source: <https://faq.i3wm.org/question/3747/enabling-multimedia-keys/?answer=3759#post-id-3759>
# Check key with xev ("xorg.xev")
# Check key with xmodmap ("xorg.xmodmap")
# `xmodmap -pke | grep -i XF86...`

# Pipewire Audio controls
bindsym XF86AudioRaiseVolume        exec --no-startup-id "pamixer -i 5"
bindsym XF86AudioLowerVolume        exec --no-startup-id "pamixer -d 5"
bindsym Shift+XF86AudioRaiseVolume  exec --no-startup-id "pamixer -i 15"
bindsym Shift+XF86AudioLowerVolume  exec --no-startup-id "pamixer -d 15"
bindsym XF86AudioMute               exec --no-startup-id "pamixer -t"

# Custom Screen brightness controls
bindsym XF86MonBrightnessUp          exec --no-startup-id "sudo backlight inc 50 && kill -s USR1 -a -- i3status"
bindsym XF86MonBrightnessDown        exec --no-startup-id "sudo backlight dec 50 && kill -s USR1 -a -- i3status"
bindsym Shift+XF86MonBrightnessUp    exec --no-startup-id "sudo backlight set max && kill -s USR1 -a -- i3status"
bindsym Shift+XF86MonBrightnessDown  exec --no-startup-id "sudo backlight set 0 && kill -s USR1 -a -- i3status"

# Media player controls
bindsym XF86AudioPlayPause  exec "playerctl play-pause"
bindsym XF86AudioPlay       exec "playerctl play"
bindsym XF86AudioPause      exec "playerctl pause"
bindsym XF86AudioStop       exec "playerctl stop"
bindsym XF86AudioNext       exec "playerctl next"
bindsym XF86AudioPrev       exec "playerctl previous"


## CUSTOM COLORS ##
set $brCyanColor   "#AFBEE1"
set $CyanColor     "#64708D"
set $brGreenColor  "#BCE1AF"
set $greenColor    "#527251"
set $brRedColor    "#E49393"
set $redColor      "#A46060"
set $fgColor       "#FFFFFF"
set $bgColor       "#262626"
set $grayColor     "#FAF   "
set $blackColor    "#373b41"
set $whiteColor    "#FFFFFF"
set $nilCol        "#000000"

# class                 border    backgr.      text         indicator    child_border
client.focused          $bgColor  $CyanColor   $whiteColor  $CyanColor   $CyanColor
client.focused_inactive $bgColor  $blackColor  $whiteColor  $blackColor  $blackColor
client.unfocused        $bgColor  $blackColor  $grayColor   $blackColor  $blackColor
client.urgent           $bgColor  $RedColor    $whiteColor  $RedColor    $RedColor
client.placeholder      $nilCol   $bgColor     $whiteColor  $nilCol      $bgColor

# Set background color
client.background                           $bgColor 
exec_always --no-startup-id xsetroot -solid $bgColor


